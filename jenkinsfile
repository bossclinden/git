
pipeline {
    agent { label 'linux' }
    parameters {
        booleanParam(name: 'SKIP_TEST', defaultValue: false, description: 'Skip the test stage')
        booleanParam(name: 'SKIP_BUILD', defaultValue: false, description: 'Skip the build stage')
        booleanParam(name: 'SKIP_DEPLOY', defaultValue: false, description: 'Skip the deploy stage')
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            when {
                expression { return !params.SKIP_BUILD }
            }
            steps {
                echo 'Build Stage'
            }
        }
        stage('Test') {
            when {
                expression { return !params.SKIP_TEST }
            }
            steps {
                echo 'Test Stage'
            }
        }
        stage('Staging') {
            steps {
                echo 'Staging Stage'
            }
        }
        stage('Deploy') {
              when {
                expression { return !params.SKIP_DEPLOY }
            }
            steps {
                echo 'Deploy Stage'
            }
        }
        stage('Post Deploy') {
            steps {
                echo 'Post Deployment Stage'
            }
        }
         stage('Prod') {
            steps {
                echo 'Prod Stage'
            }
        }
    }
    post {
        always {
            echo "Build finished"
        }
        success {
            echo "Build completed successfully!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
 
